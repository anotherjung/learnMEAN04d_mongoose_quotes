<html>
<head>
  <title>Yo Baby2!</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href='css/materialize.css' rel='stylesheet' />
  <script src="js/jquery-2.1.4.min.js"></script>
  <script src="js/materialize.js"></script>
 
<div class="container">
  <div class="col s12">
<h1 class="center-align">yo what's your name & color?</h1>

  <form action='/users' method='post'>
    <ul>
      <li>  Name: <input type='text' name='name' id='name'> </li>
      <li>  Quote: <input type='text' name='quote' id='quote'> </li>
      <li>  
        <button class="btn-large waves-effect waves-light " type="submit" name="submit">Submit
          <i class="material-icons">send</i>
        </button>
      </li>
    </ul>
  </form>

</div>

<div class="container">
	<div class="col s12">
		<table class="center-align">
			<% for (var x in users) { %>
			<tr><td><%= users[x].name %></td>
				<td><%= users[x].quote %></td></tr>
				<% } %>
			</table>
		</div>
	</div>

</body>
</html>